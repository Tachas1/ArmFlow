<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_corners"
    android:backgroundTint="@color/text_gray"
    android:layout_marginVertical="5dp"
    android:paddingVertical="10dp"
    android:paddingHorizontal="15dp">
    <TextView
        android:id="@+id/myEventHeadLine"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Head Line"
        android:textColor="@color/dirty_white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"/>
    <RelativeLayout
        android:id="@+id/myEventAddressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/myEventHeadLine"
        android:layout_marginVertical="5dp">
        <TextView
            android:id="@+id/myEventAddressTxt"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Address : "
            android:textColor="@color/dirty_white"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:layout_below="@id/myEventAddressTxt"
            android:id="@+id/myEventAddress"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Kołłątaja 21B"
            android:textColor="@color/dirty_white"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:layout_toEndOf="@id/myEventAddressTxt"
            android:id="@+id/myEventAddressTwoTxt"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Address 2 : "
            android:textStyle="bold"
            android:textColor="@color/dirty_white"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:layout_alignStart="@id/myEventAddressTwoTxt"
            android:layout_below="@id/myEventAddressTwoTxt"
            android:id="@+id/myEventAddressTwo"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="17"
            android:textColor="@color/dirty_white"
            android:maxLines="1"
            android:ellipsize="end"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myEventAddressBar"
        android:layout_marginVertical="5dp">
        <TextView
            android:id="@+id/myEventLatitudeTxt"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Latitude : "
            android:textColor="@color/dirty_white"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:layout_below="@id/myEventLatitudeTxt"
            android:id="@+id/myEventLatitude"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="21.763672471871381273382"
            android:textColor="@color/dirty_white"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:layout_toEndOf="@id/myEventLatitudeTxt"
            android:id="@+id/myEventLongitudeTxt"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Longitude : "
            android:textColor="@color/dirty_white"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:layout_below="@id/myEventLongitudeTxt"
            android:layout_alignStart="@id/myEventLongitudeTxt"
            android:id="@+id/myEventLongitude"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="51.132831238718722121"
            android:textColor="@color/dirty_white"
            android:maxLines="1"
            android:ellipsize="end"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/myEventRemove"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_remove_circle_outline_24"
        android:background="@drawable/circle"
        android:backgroundTint="@color/crimson"
        app:tint="@color/dirty_white"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>