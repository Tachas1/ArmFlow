<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homeFrag.CreateCalenEventFragment"
    android:id="@+id/createCalenEventFrag"
    android:background="@drawable/home_background_light">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/trans_black"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="80dp">
        <RelativeLayout
            android:id="@+id/dateBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="left"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp">
            <TextView
                android:id="@+id/createCalenEventDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data: "
                android:textColor="@color/dirty_white"
                android:textSize="17sp"
                android:layout_marginHorizontal="10dp"
                android:layout_centerVertical="true"
                android:padding="2dp"
                android:layout_margin="5dp"/>
            <ImageView
                android:id="@+id/createCalenEventBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_keyboard_arrow_left_24"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/decor1"
            android:layout_below="@id/dateBar"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/dirty_white"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"/>
        <TextView
            android:id="@+id/calenCreateTitle"
            android:layout_below="@id/decor1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tytuł"
            android:textColor="@color/dirty_white"
            android:textSize="16dp"
            android:layout_marginHorizontal="15dp"
            android:paddingVertical="10dp"
            />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/calenCreateTitleTxt"
            android:layout_below="@id/calenCreateTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/dirty_white"
            android:layout_marginHorizontal="15dp"
            android:paddingHorizontal="10dp"
            android:textColor="@color/text_gray"
            android:maxLines="1"
            android:hint="np. Podciąganie"
            android:textColorHint="@color/trans_dark_blue_less"/>
        <TextView
            android:id="@+id/calenCreateDesc"
            android:layout_below="@id/calenCreateTitleTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opis"
            android:textColor="@color/dirty_white"
            android:textSize="16dp"
            android:layout_marginHorizontal="15dp"
            android:paddingVertical="10dp"
            />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/calenCreateDescTxt"
            android:layout_below="@id/calenCreateDesc"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/dirty_white"
            android:layout_marginHorizontal="15dp"
            android:paddingHorizontal="10dp"
            android:textColor="@color/text_gray"
            android:maxLines="1"
            android:hint="np. Ile serii?"
            android:textColorHint="@color/trans_dark_blue_less"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/calenCreateSubmit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/calenCreateDescTxt"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/orange"
            android:text="Wpisz w kalendarz"
            android:textColor="@color/dirty_white"
            android:textSize="17sp"
            tools:ignore="TouchTargetSizeCheck" />

    </RelativeLayout>
</RelativeLayout>