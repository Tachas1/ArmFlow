<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background"
    tools:context=".HomePage"
    android:id="@+id/homeCalendarPage">
    <ScrollView
        android:id="@+id/homePageScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:paddingHorizontal="5dp"
        android:background="@drawable/rounded_corners"
        android:layout_marginBottom="75dp"
        android:outlineProvider="background"
        android:clipToOutline="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mcv_showOtherDates="all"
            app:mcv_selectionColor="@color/crimson"
            app:mcv_calendarMode="month"
            app:mcv_selectionMode="single"
            android:padding="10dp"
            android:background="@drawable/white_gradient"
            app:mcv_dateTextAppearance="@style/CustomTextAppearance"
            app:mcv_weekDayTextAppearance="@style/CustomTextAppearance"
            app:mcv_headerTextAppearance="@style/CustomTextHeaderAppearance"
            />
        <RelativeLayout
            android:id="@+id/toDoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/calendarView"
            android:layout_marginVertical="5dp"
            android:background="@drawable/white_gradient">
            <RelativeLayout
                android:id="@+id/toDoBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/toDoBarText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Co dzisiaj robisz:"
                    android:textStyle="bold"
                    android:textColor="@color/dirty_white"
                    android:padding="5dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerInParent="true"/>
                <ImageView
                    android:id="@+id/toDoAdd"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_add_24"
                    app:tint="@color/dirty_white"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/toDoRecycler"
                android:layout_below="@id/toDoBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/trainingBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toDoContainer"
            android:background="@drawable/white_gradient"
            >
            <TextView
                android:id="@+id/trainingTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Treningi: "
                android:textStyle="bold"
                android:textColor="@color/dirty_white"
                android:padding="5dp"
                android:layout_centerHorizontal="true"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/trainingsRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/trainingTxt">
            </androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>