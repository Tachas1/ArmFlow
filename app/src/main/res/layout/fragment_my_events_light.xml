<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mapFrag.MyEventsFragment"
    android:background="@drawable/home_background_light">
    <RelativeLayout
        android:id="@+id/myEventsNameBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My events"
            android:textColor="@color/dirty_white"
            android:textSize="23sp"/>
        <ImageView
            android:id="@+id/myEventsGoBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_keyboard_arrow_left_24" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/myEventsNameBar"
        android:id="@+id/myEventsList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/trans_black_less">
    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>