<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/orange_gradient"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="5dp"
    android:padding="10dp">
    <TextView
        android:id="@+id/trainingHeadLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trening Pawła Hłopkina"
        android:textColor="@color/dirty_white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="10dp"
        />
    <TextView
        android:id="@+id/trainingDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plan na 4 tygodnie"
        android:textSize="18sp"
        android:textColor="@color/dirty_white"
        android:layout_alignStart="@id/trainingHeadLine"
        android:layout_below="@id/trainingHeadLine"/>
    <ImageView
        android:id="@+id/trainingDescriptionIcon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/baseline_description_24"
        app:tint="@color/dirty_white"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>