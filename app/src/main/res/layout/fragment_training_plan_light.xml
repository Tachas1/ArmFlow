<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homeFrag.TrainingPlanFragment"
    android:background="@drawable/home_background_light"
    android:id="@+id/trainingPlanPage">
    <RelativeLayout
        android:id="@+id/trainingPlanContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/trans_black"
        android:clipToOutline="true"
        android:outlineProvider="background"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="80dp"
        android:padding="10dp">
        <TextView
            android:id="@+id/trainingPlanTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tytuł"
            android:textColor="@color/dirty_white"
            android:textStyle="bold|italic"
            android:textSize="22sp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/trainingPlanDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opis"
            android:textColor="@color/dirty_white"
            android:textStyle="italic"
            android:textSize="16sp"
            android:layout_below="@id/trainingPlanTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"/>
        <ImageView
            android:id="@+id/trainingPlanReturn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/baseline_keyboard_return_24"
            android:layout_alignParentStart="true"
            app:tint="@color/dirty_white" />
        <ImageView
            android:id="@+id/trainingPlanAddToCalendar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/baseline_add_24"
            app:tint="@color/dirty_white"
            android:layout_alignParentEnd="true"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/trainingPlanRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/trainingPlanDesc"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/trans_white"
            android:clipToOutline="true"
            android:outlineProvider="background"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/trainingPlanAddContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E2151515"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/trans_white"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp">
                <ImageView
                    android:id="@+id/trainingPlanAddClose"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_close_24"
                    app:tint="@color/dirty_white"
                    android:layout_marginTop="-5dp"
                    android:layout_marginLeft="-5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dodaj trening"
                    android:textSize="22sp"
                    android:textColor="@color/dirty_white"
                    android:textStyle="bold|italic"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Od kiedy chcesz zacząć?"
                android:textColor="@color/dirty_white"
                android:textSize="19sp"
                android:textStyle="italic"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/trainingPlanStartDate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="@color/dirty_white"
                android:layout_marginHorizontal="15dp"
                android:paddingHorizontal="10dp"
                android:textColor="@color/text_gray"
                android:maxLines="1"
                android:maxLength="10"
                android:hint="np. 2024.04.13 ( yyyy.mm.dd )"
                android:textColorHint="@color/trans_dark_blue_less"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/trainingPlanSubmit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="@color/orange"
                android:text="Dodaj"
                android:textColor="@color/dirty_white"
                android:textSize="17sp"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>