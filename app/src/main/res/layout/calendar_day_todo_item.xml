<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corners"
    android:backgroundTint="@color/trans_dark_blue"
    android:layout_marginBottom="5dp"
    android:layout_marginHorizontal="5dp"
    android:paddingHorizontal="10dp">
    <RelativeLayout
        android:id="@+id/toDoItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginVertical="10dp">
        <TextView
            android:id="@+id/toDoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ćwiczenie"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_marginLeft="12dp"
            >
        </TextView>
        <TextView
            android:id="@+id/toDoDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Przykładowy opis twojego ćwiczenia"
            android:textColor="@color/dirty_white"
            android:layout_below="@id/toDoTitle"
            android:layout_alignStart="@id/toDoTitle"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/toDoByUser"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_baseline_person_24"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
       />
</RelativeLayout>